{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CUCK3D DEBUGGER",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Cub3D",
            "args": ["${input:mapFile}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                { "name": "DISPLAY", "value": "${env:DISPLAY}" }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "build",
            "setupCommands": [
                { "description": "Enable pretty-printing for gdb", "text": "-enable-pretty-printing", "ignoreFailures": true }
            ]
        }
    ],
    "inputs": [
        {
            "id": "mapFile",
            "type": "promptString",
            "description": "Path to .cub file (relative or absolute)",
            "default": "Maps/Test.cub"
        }
    ]
}
